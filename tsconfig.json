{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["functions/**/*.ts", "tests/**/*.ts","src/**/*.ts", "tests/integration/leases.test.js", "tests/integration/leases.test.js"],
  "exclude": ["node_modules", "build", "dist"]
}