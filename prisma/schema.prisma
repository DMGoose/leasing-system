datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lease {
  id             String    @id @default(uuid())
  companyId      String
  itemId         String
  price          Float
  termMonths     Int
  nominalRatePct Float
  startDate      DateTime
  upfrontFee     Float
  monthlyFee     Float
  createdAt      DateTime  @default(now())
  scheduleJson   String
  totalsJson     String
  payments       Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  leaseId   String
  paidAt    DateTime
  amount    Float
  lease     Lease    @relation(fields: [leaseId], references: [id])
}
